<p id = "notice" ><%= notice %></p>
<div id = "content">
  <h1> Menu </h1>

  <%=link_to menu_path(@menu) do %>
    <div id = "feature" >
    <h2 > Featured Food </h2>
      <%=@menu.item.titleize %>
      <div id = "featured_img">
      <!--%= image_tag attachment_url(@menu, :image, :fill, 300, 300, format:"jpeg") unless @menu.image == nil%-->
      </div >
    </div >
  <%end %>

  <table>
    <thead>
      <tr>
      <th> Item </th>
      <th> Detail </th>
      <th> Cost </th>
      <th> Image </th>
      <th> Type </th>
      <th colspan = "3" ></th>
      </tr >
    </thead >

    <tbody >
      <%@menus.each do |menu | %>
        <tr >
        <td ><%=menu.item.titleize %></td >
        <td ><%=menu.detail %></td >
        <td ><%= number_to_currency menu.cost %></td >
        <!--td><begin%=menu.image %></td -->
        <td ><%=menu.food_type %></dt >
        <td ><%=link_to 'Show', menu %></td >
        <td ><%=link_to 'Edit', edit_menu_path(menu) %></td >
        <td ><%=link_to 'Destroy', menu, method: :delete, data:{ confirm:	'Are you sure?' } %>
        </td >
        </tr >
      <%end %>
    </tbody>
  </table >

  <br >

  <%=link_to 'New Menu', new_menu_path %>

  <div>
  <h4>Import Food Items from File</h4>
    <%= form_tag import_menus_path, multipart: true do%>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV" %>
    <% end %>
  </div>

</div >
